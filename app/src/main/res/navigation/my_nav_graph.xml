<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.androidready.demo.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.androidready.demo.SecondFragment"
        android:label="SecondFragment"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/action_secondFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="www.nd.com" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.androidready.demo.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <action
        android:id="@+id/action_global_settingFragment"
        app:destination="@id/settingFragment"
        app:popUpToInclusive="false" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.androidready.demo.ProfileFragment"
        android:label="ProfileFragment" />
    <action android:id="@+id/action_global_homeFragment" app:destination="@id/homeFragment"/>
</navigation>